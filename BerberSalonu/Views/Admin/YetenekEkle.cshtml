@using BerberSalonu.ViewModel
@model BerberYetenekEkleViewModel

<form asp-action="YetenekEkle" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="BerberId" class="control-label"></label>
        <select asp-for="BerberId" class="form-control" asp-items="@(new SelectList(Model.Berberler, "Id", "Kullanici.Ad"))">
        </select>
        <span asp-validation-for="BerberId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YetenekId" class="control-label"></label>
        <select asp-for="YetenekId" class="form-control" asp-items="@(new SelectList(Model.Yetenekler, "Id", "Name"))">
        </select>
        <span asp-validation-for="YetenekId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
