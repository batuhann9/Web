@using BerberSalonu.ViewModel
@model BerberSilViewModel

@{
    ViewData["Title"] = "Berber Sil";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-5 bg-light" style="max-width: 600px; width: 100%;">
        <h2 class="text-center fw-bold mb-4">
            <span class="text-dark">Berber</span> Sil
        </h2>
        <p class="text-center text-muted mb-4">Bir berberi silmek için listeden seçin</p>

        @if (TempData["Başarı"] != null)
        {
            <div class="alert alert-success text-center"> @TempData["Başarı"] </div>
        }
        else if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger text-center"> @TempData["Hata"] </div>
        }
        else if (TempData["Bilgi"] != null)
        {
            <div class="alert alert-warning text-center"> @TempData["Bilgi"] </div>
        }

        <form asp-controller="Admin" asp-action="BerberSil" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="BerberId" class="form-label fw-semibold">Berber Seçin:</label>
                <select asp-for="BerberId" class="form-control" asp-items="@Model.BerberlerSelectList">
                    <option value="" disabled selected>Bir berber seçin</option>
                </select>
                <span asp-validation-for="BerberId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-danger w-100 py-2">Sil</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f0f2f5, #d6dbe0);
        height: 100vh;
        margin: 0;
    }

    .card {
        border-radius: 20px;
    }

    .btn-danger {
        background-color: #c0392b;
        border-color: #c0392b;
    }

    .btn-danger:hover {
        background-color: #a93226;
        border-color: #a93226;
    }

    .form-control:focus {
        box-shadow: 0 0 10px rgba(192, 57, 43, 0.4);
        border-color: #c0392b;
    }
</style>