@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<h1 class="text-center my-4">Hizmetlerimiz</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card hizmet-card">
                <img src="~/img/sac-tirasi.jpg" class="card-img-top" alt="Saç Tıraşı">
                <div class="card-body">
                    <h5 class="card-title">Saç Tıraşı</h5>
                    <p class="card-text">Profesyonel, stilinize uygun anatomik saç kesimi.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card hizmet-card">
                <img src="~/img/sakal-tirasi.jpg" class="card-img-top" alt="Sakal Tıraşı">
                <div class="card-body">
                    <h5 class="card-title">Sakal Tıraşı</h5>
                    <p class="card-text">Özenli ve stilinize uygun sakal tıraşı hizmeti.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card hizmet-card">
                <img src="~/img/boya.jpg" class="card-img-top" alt="Saç Boyama">
                <div class="card-body">
                    <h5 class="card-title">Saç Boyama</h5>
                    <p class="card-text">Sadece saçınıza değil, hayatınıza renk katıyoruz.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch justify-content-center mt-5 son-kart">
            <div class="card hizmet-card">
                <img src="~/img/cilt-bakimi.jpg" class="card-img-top" alt="Cilt Bakımı">
                <div class="card-body">
                    <h5 class="card-title">Cilt Bakımı</h5>
                    <p class="card-text">Cildinize hak ettiği tazeliği kazandırın.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

    </script>
}

<style>
    .hizmet-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        overflow: hidden;
    }

        .hizmet-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .hizmet-card img {
            height: 250px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .hizmet-card .card-body {
            min-height: 150px;
        }

    .son-kart {
        margin-top: 40px;
    }
</style>
