@model List<BerberSalonu.Models.Randevu>

<h1>Gelen Randevu Talepleri</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Müşteri Adı</th>
                <th>Yetenek</th>
                <th>Randevu Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@($"{randevu.Musteri.Kullanici.Ad} {randevu.Musteri.Kullanici.Soyad}")</td>
                    <td>@randevu.Yetenek.Name</td>
                    <td>@randevu.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <form method="post" asp-action="RandevuOnayla" asp-route-id="@randevu.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success">Onayla</button>
                        </form>
                        <form method="post" asp-action="RandevuReddet" asp-route-id="@randevu.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Reddet</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Onay bekleyen randevu talebi bulunmamaktadır.</p>
}